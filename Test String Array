#include <iostream>
#include <string>

using namespace std;

int main()
{
	string myArray[5];
	
	myArray[0] = "Cats?";
	myArray[1] = "Dogs?";
	myArray[2] = "Ice Cream?";
	myArray[3] = "Pizza?";
	myArray[4] = "Babies?";

	string user_input;
	int counter_1;
	int counter_2;
	int i=0;
	
	for(i=0; i<5; i++)
	{
		cout << myArray[i] << endl;
		cin >> user_input;
		if(user_input=="yes" || user_input=="Yes" || user_input=="YES")
			counter_1++;
		else if(user_input=="no" || user_input=="No" || user_input=="NO")
			counter_2++;
	}
	cout << "The voting results:" << endl << endl; 
	cout << "Yes's = " << counter_1 << endl << endl;
	cout << "No's = " << counter_2 << endl << endl;
	
	return 0;
}
